@model FretesWebApplication.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Produto</h1>

<h3>Tem certeza que deseja deletar este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Denominacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Denominacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PesoProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PesoProduto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProduto" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para lista de produtos</a>
    </form>
</div>
