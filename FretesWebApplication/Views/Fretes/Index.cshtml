@model IEnumerable<FretesWebApplication.Models.Frete>

@{
    ViewData["Title"] = "Index";
}

<h1>Fretes</h1>

<p>
    <a asp-action="Create">Criar Novo Frete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Distancia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Veiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Distancia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Veiculo.Denominacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Denominacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taxa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFrete">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdFrete">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdFrete">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
