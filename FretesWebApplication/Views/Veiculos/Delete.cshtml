@model FretesWebApplication.Models.Veiculo

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Veículo</h1>

<h3>Tem certeza que deseja deletar este veículo?</h3>
<div>
    <h4>Veículo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Denominacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Denominacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoVeiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoVeiculo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PesoVeiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PesoVeiculo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVeiculo" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista de veículos</a>
    </form>
</div>
